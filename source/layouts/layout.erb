<!doctype html>
<html>
  <head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-115766869-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-115766869-1');
    </script>
    <!-- Meta properties -->
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title>Alexis Pipieri</title>
    <meta name="description" content="I'm a freelance fullstack Web Developer based in Paris.">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="Alexis Pipieri - Fullstack Web Developer" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://www.alexispipieri.com/" />
    <meta property="og:image" content="http://res.cloudinary.com/alexispip/image/upload/c_crop,h_630,w_1200/v1522233074/meta-picture-portfolio.png" />
    <meta property="og:description" content="I'm a freelance fullstack Web Developer based in Paris." />
    <meta property="og:site_name" content="Alexis Pipieri - Fullstack Web Developer" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@Pips166">
    <meta name="twitter:title" content="Alexis Pipieri - Fullstack Web Developer">
    <meta name="twitter:description" content="I'm a freelance fullstack Web Developer based in Paris.">
    <meta name="twitter:creator" content="@Pips166">
    <meta name="twitter:image:src" content="http://res.cloudinary.com/alexispip/image/upload/c_crop,h_630,w_1200/v1522233074/meta-picture-portfolio.png">

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= favicon_tag 'images/favicon.ico' %>
    <link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">
  </head>
  <body>
    <%= partial "layouts/navbar" %>
    <%= yield %>
    <%= partial "layouts/footer" %>
  </body>
</html>
